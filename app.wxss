@import 'style/weui.wxss';
/* 基础样式 */
view, scroll-view, swiper, swiper-item, icon, text, progress, button, checkbox-group, checkbox, form, input, label, picker, radio-group, radio, slider, switch, action-sheet, action-sheet-item, action-sheet-cancel, modal, toast, loading, navigator, audio, image, video, map, canvas {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

page {
  position: relative;
  background-size: 100%;
  background-position: center;
  height: 100%;
  margin: 0;
}

.background {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: -1;
  background-image: linear-gradient(170deg, rgba(48, 162, 188, .8) 1%, #3a326b)
}
/** **/
.bg {
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
}

.loading {
  position: fixed;
  left: 20%;
  top: 50%;
  right: 20%;
  height: 40px;
  margin-top: -20px;
  background-color: rgba(0, 0, 0, 0.51);
  color: #ffffff;
  text-align: center;
  font-size: 20px;
  line-height: 40px;
  border-radius: 5px;
}

.img {
  width: 100%;
}