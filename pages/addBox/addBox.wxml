<view class="background"></view>
<view class="container">
<form class="" bindsubmit="formSaveData">
    <label class="form-group">
        <text class="form-group-title">事件标题:</text>
        <input class="form-group-input"
               bindinput="titleChange"
               placeholder="总结一下这一刻"
               value="{{detail.title ||''}}"
               placeholder-class="input-placeholder"
               type="text"/>
    </label>
    <label class="form-group">
        <text class="form-group-title">事件时间:</text>
        <picker mode="date" value="{{detail.timeStr}}"
                wx:if="{{detail.eventType == 0}}"
                name="time"
                class="eventTime form-group-input"
                bindchange="eventTimeChange"
        >
            <view class="picker">
                {{detail.timeStr || '点击记录这一刻时间'}}
            </view>
        </picker>
        <view class="form-group-switch" wx:if="{{detail.eventType == 1}}">
            {{detail.timeStr}}
        </view>
    </label>
    <label class="form-group">
        <text class="form-group-title">事件类型:</text>
        <view class="form-group-switch">
            纪念日
            <switch bindchange="eventTypeChange"/>
            日记
        </view>


    </label>
    <label class="form-group">
        <text class="form-group-title">事件内容:</text>
        <textarea class="form-group-texterea"
                  name="content"
                  auto-height="true"
                  bindinput="contentFunc"
                  value="{{detail.content || ''}}"
                  placeholder="记录这一刻点点滴滴"
                  placeholder-class="input-placeholder"
                  type="textarea"/>
    </label>
    <label class="form-group">
        <text class="form-group-title">地理位置:</text>
        <text class="form-group-address">上海文青大街</text>
    </label>

    <view class="img-group">
        <view class="img-item">
            <image class="img" mode="scaleToFill"
                   bindtap="choosePic"
                   src="../../resources/addPic.png"/>
        </view>
        <view class="img-item">
            <image class="img" mode="scaleToFill"
                   bindtap="choosePic"
                   src="../../resources/addPic.png"/>
        </view>


        <image class="wx-image_aQZsaV" mode="scaleToFill"
               bindtap="seePic"
               wx:if="{{imgList !=''}}"
               src="{{imgList}}"/>

    </view>
    <view class="btn-group">
        <button class="btn-save"
                bindtap="formSaveData"
                hover-class="button-hover"
                size="default">
            保存
        </button>
    </view>
    <text class="loading" wx:if="{{isLoading == true}}">
        保存中
    </text>
</form>
</view>
