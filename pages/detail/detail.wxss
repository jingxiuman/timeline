.detail {
  height: 100%;
  background-color: #fff;
}

.detail-img-main {
  position: relative;
}

.detail-img {
  width: 100%;
  height: 250px;
  display: block;
}

.detail-eventType {
  position: absolute;
  left: -27px;
  font-size: 10px;
  top: 50%;
  color: #fff;
  letter-spacing: 4px;
  transform: rotate(-90deg);
  width: 100px;
  margin-top: -50px;
  text-align: left;
}

.detail-img-cover {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: -webkit-radial-gradient(50% 50%, farthest-corner, #fffefe 66%, #8a8888 157%)ï¼›;
}

.detail-day {
  position: absolute;
  right: 10px;
  bottom: 10px;
  color: #fff;
  font-size: 12px;
}

.detail-time {
  position: absolute;
  left: 25px;
  right: 0;
  top: 150px;
  text-align: left;
  color: #fa7298;
  font-size: 48px;
  font-weight: bolder;
  line-height: 1.5;
  letter-spacing: 10px;
}

.detail-eventName {
  position: absolute;
  left: 25px;
  right: 0;
  top: 210px;
  text-align: left;
  letter-spacing: 4px;
  color: #fff;
  font-size: 24px;
}

.detail-container {
  background-color: #fff;
  font-size: 12px;
  color: #95989a;
  text-align: center;
}


.detail-content {
  font-size: 15px;
  line-height: 1.5;
  color: #95989a;
  margin: 0 20px;
  padding: 10px 0;
}

.detail-img-item {
  margin: 10px 15px 0;
  border-radius: 5px;
}

.detail-img-item image {
  border-radius: 5px;
}

.share {
  text-align: center;
  margin-top: 10px;
}

.operation {
  position: fixed;
  right: 10px;
  bottom: 10px;
  width: 50px;
  height: 50px;
  border-radius: 100px;
  background-color: #95989a;
  text-align: center;
  line-height: 50px;
  color: #fff;
  font-size: 20px;
}
