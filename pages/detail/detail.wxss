.detail {
  height: 100%;
  background-color: #ffffff;
}

.detail-img-main {
  position: relative;

}

.detail-img {
  width: 100%;
  height: 250px;
  display: block;
}

.detail-time {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
  color: #fa7298;
  font-size: 35px;
  font-weight: bolder;
  line-height: 1.5;
}

.detail-container {
  background-color: #ffffff;
}

.detail-title {
  text-align: center;
  font-size: 28px;
  color: #95989A;
  margin: 20px 20px 5px;
}

.detail-other {
  align-items: center;
  font-size: 12px;
  color: #95989a;
  text-align: center;
  margin: 0 20px;
  border-bottom: 1px solid rgba(149, 152, 154, 0.27);
  padding-bottom: 5px;
}

.detail-content {
  font-size: 15px;
  line-height: 1.5;
  color: #95989a;
  margin: 0 20px;
  padding: 10px 0;
}

.detail-img-item {
  margin: 10px 15px 0;
  border-radius: 5px;
}

.detail-img-item image {
  border-radius: 5px;
}
.share{
  text-align: center;
  margin-top: 10px; 
}
.operation{
  position: fixed;
  right: 10px;
  bottom: 10px;
  width: 50px;
  height: 50px;
  border-radius: 100px;
  background-color: #95989a;
  text-align: center;
  line-height: 50px;
  color: #ffffff;
  font-size: 20px;
}