.main {
  padding: 20px;
  background-color: #fdfcfc;
  font-size: 14px;
}
.btn-group {
  width: 100%;
  text-align: center;
}

.btn-save {
  width: 50%;
  background-color: rgb(249, 127, 161);
  color: #ffffff;
  margin-top: 10px;
}
.list {
  margin-top: 50px;
  font-size: 12px;
}
.list .item {
  margin-bottom: 10px;
  border: 1px solid #fdfcfc;
  background-color: #ffffff;
  box-shadow: 0 0 9px #d6d1d1;
  border-radius: 5px;
  padding: 5px;
}
.list .question {
  color: #000;
  opacity: 0.5;
  border-bottom: 1px solid #d6d1d1;
  padding: 10px 0;
}
.list .answer {
  padding: 10px 0;
  color: #000;
  opacity: 0.7;
}
.list .answer text {
  color: #fa7298;
}
.list .time { 
  color: #000;
  opacity: 0.4;
  font-size: 10px;
  padding-top: 10px;
}