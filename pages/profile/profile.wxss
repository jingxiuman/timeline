page {
  background-color: #fff;
}

.img {
  width: 100%;
  height: 100%;
}

.profile_container {
  height: 250px;
  width: 100%;
  position: relative;
}

.profile_bg {
  height: 100%;
  width: 100%;
  filter: blur(5px);
}

.profile_pic {
  position: absolute;
  left: 0;
  right: 0;
  width: 140px;
  height: 140px;
  top: 50%;
  margin: -70px auto 0;
  padding: 3px;
  box-sizing: border-box;
  background: #fff;
  border-radius: 140px;
}

.profile_pic .img {
  border-radius: 140px;
}

.profile_sq {
  position: absolute;
  left: 0;
  right: 0;
  width: 100%;
  height: 20px;
  bottom: -20px;
  background: #fff;
}

.profile_name {
  font-size: 24px;
  color: #595656;
  margin: 20px 0;
  text-align: center;
}

.profile_name text {
  border-bottom: 2px solid #fa7298;
  padding-bottom: 5px;
}
.profile_data {
  display: flex;
  text-align: center;
  margin-bottom: 20px;
}
.profile_data_item {
  flex: 1;
  font-size: 10px;
}
.profile_data_item_content {
  font-size: 18px;
  color:#595656;
}
.profile_data_item_desc {
  letter-spacing: 5px;
  color: #A5A0A0;
}
.others_item {
  font-size: 16px;
  border-bottom: 1px solid #E2DCDC;
  height: 40px;
  line-height: 40px;
  padding: 0 25px;
  position: relative;
  
}
.others_item_right {
 
  width: 20px;
  height: 20px;
  position: absolute;
  top: 50%;
  bottom: 0;
  right: 10px;
  margin-top: -10px;
}
.others_item_right image {
  width: 100%;
  height: 100%;
}
.others_item text {
  color: #929090;
}