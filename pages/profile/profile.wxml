<view class="background">

</view>
<view class="container">
<view class="profile">
    <image class="img" mode="scaleToFill" src="{{ userInfo.userPic}}"
           style="background-size: 100% 100%; background-position: 0% 0%; background-repeat: no-repeat; background-image: url(http://o3bnyc.creatby.com/diazo/images/image-placeholder.svg);"/>
    <view class="profile-text">{{userInfo.username}}</view>
</view>
<view class="weui-cells nav-container weui-cells_after-title">
            <navigator url="/pages/advice/advice" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">意见反馈</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="/pages/log/log" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">更新日志</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
<view class="contactMe">
    <button open-type="contact"
            class="contactMe_btn"
            type="default-light"
            size="20"
            session-from="weapp"
    >
        给我留言
    </button>
</view>
</view>