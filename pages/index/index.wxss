.container,.containerBg, .content, page {
  width: 100%;
  height: 100%;
}
.content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0.5;
  /* background: linear-gradient(to bottom, rgb(251, 246, 246, 0.5) , rgb(0, 0, 0, 0.5)); */
    background: linear-gradient(to bottom, transparent 80%, #000); 
}
.content .title {
  padding-top:20%;
  color:#fff;
  text-align:center;
  width:80%;
  margin:0 auto;
}
.content .title text {
  display: block;
}
.content .title .desc{
  font-size: 18px;

}
.content .title .author {
  font-size: 12px;
  text-align: right;
}
.dayName {
  position: absolute;
  bottom: 15%;
  right: 0;
  width: 80%;
  font-size: 100px;
  color: #fff;
  text-align: right;
  letter-spacing: 20px;
  z-index: 999;
  opacity: 0.25;
}
.eventContent {
  position: absolute;
  bottom: 15%;
  left: 7%;
  right: 5%;
}
.dayNum {
  color: #fff;
  font-size: 64px;
  letter-spacing: 10px;
}
.eventName {
  position: absolute;
  bottom: -10%;
  left: 0;
  color: #fff;
  opacity: 0.7;
  font-size: 24px;
  letter-spacing: 5px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 80%;
}