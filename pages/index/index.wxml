<!--pages/index/index.wxml-->
<view class="container">
  <image class="containerBg" wx:if="{{isAnswer}}" mode="aspectFill" src="{{info.bgImg}}" binderror="imgLoadError"></image>
  <image class="containerBg" wx:if="{{!isAnswer}}" mode="aspectFill" src="{{bgImg}}" binderror="imgLoadError"></image>
  <navigator open-type="switchTab" url="../box/box">
    <view class='content'>
      <view class="title" >
        <text class='desc'>记录你生命中的最重要时刻</text>
        <text class='author'>--旧时光</text>
      </view>
    </view>
    <view class='eventContent' wx:if="{{isAnswer}}">
      <text class='dayName'>DAY</text>
      <text class='dayNum'>{{ info.eventDay }}</text>
      <text class='eventName'>{{ info.eventName }}</text>

      <image class='seeMore' src="../../resources/index/right.png" mode="scaleToFill"></image>

    </view>
  </navigator>
</view>