.container {
  height: 100%;
}
.timeLine-item {
  border-radius: 15px;
  box-shadow: 0 0 11px #B2ADAD;
  height: 220px;
  margin:15px 10px;
  font-size: 14px;
  color: #B0ACAC;
}
.timeLine-img {
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  height: 145px;
  background-color: #fa7298;
}
.timeLine-img .img {
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  height: 100%;
  width: 100%;
}
.timeLine-content {
  padding: 10px;
  display: flex;
  justify-content: center;
}
.timeLine-title {
  flex: 2;
  line-height: 75px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.timeLine-date {
  flex: 1;
  text-align: right;
  font-size: 10px;
}
.timeLine-day {
  font-size: 24px;
  color: #FC7097;
}